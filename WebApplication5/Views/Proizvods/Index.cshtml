@model IEnumerable<WebApplication5.Models.Proizvod>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.3.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/scripts/dataTables.bootstrap4.min.js"></script>
    <title>Index</title>
</head>
<body>
    <p  style="margin:50px;">
        @Html.ActionLink("Create New", "Create", new object { }, new { @class = "btn btn-success"})
    </p>
    <table class="table ">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Kategorija)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Proizvodjac)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Dobavljac)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Cena)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr scope="row">
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategorija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proizvodjac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dobavljac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
